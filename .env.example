# =============================================================================
# FBO Manager - Environment Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# Django Backend
# -----------------------------------------------------------------------------
DEBUG=1
SECRET_KEY=your_secret_key_here

# -----------------------------------------------------------------------------
# Next.js Frontend
# -----------------------------------------------------------------------------
# API URLs
API_URL=http://localhost:8000
NEXT_PUBLIC_API_URL=http://localhost:8000

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# Mapbox (for parking map)
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=your_mapbox_token_here

# -----------------------------------------------------------------------------
# Push Notifications (VAPID)
# -----------------------------------------------------------------------------
VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here
VAPID_EMAIL=your_vapid_email_here
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your_vapid_public_key_here

# -----------------------------------------------------------------------------
# QT Technologies Fuel Dispatch
# -----------------------------------------------------------------------------
QT_USERNAME=your_qt_username
QT_PASSWORD=your_qt_password
QT_COMPANY_LOCATION_ID=your_company_location_id
QT_USER_ID=your_user_id

# -----------------------------------------------------------------------------
# Supabase Database
# -----------------------------------------------------------------------------
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
SUPABASE_DB_HOST=your_supabase_db_host
SUPABASE_DB_USER=your_supabase_db_user
